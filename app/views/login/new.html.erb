<h1 class="text-center">Login</h1>

<div class="row d-flex justify-content-center">
  <div class="mb-3 w-50" id="login">
    <%= bootstrap_form_with url: login_path, method: :post, local: true do |form| %>
      <%= form.text_field :email, required: true %><br>
      <%= form.password_field :password, required: true %><br>
      <%= form.submit "Login", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
