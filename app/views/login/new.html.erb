<h1>Login</h1>

<div id="login">
  <%= form_with url: login_path, method: :post, data: { turbo: false }, local: true do |form| %>
    <%= form.label :email,    "Email:      "  %>
    <%= form.text_field :email, required: true %><br>
    <%= form.label :password, "Password:   " %>
    <%= form.password_field :password, required: true %><br>
    <%= form.submit "Login" %>
  <% end %>
</div>
