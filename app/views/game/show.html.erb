<h1>Flash Cards</h1>

<center><h2 class="animated card fadeInUp">
  <%= form_with url: answer_path, method: :patch, data: { turbo: false }, local: true do |form| %>
    <div class="card container border-primary">
      <div class="card-header row justify-content-between text-white bg-primary">
        <h5 class='pull-left'><%= "Card Number #{@card.id}" %></h5>
        <h6 class="pull-right"><%= "Type: #{@card.calc_type.capitalize}" %></h6>
      </div>
      <div class="card-body">
        <p class="card-text"><%= @card.question %></p>
      </div>
      <div class="card-form form-inline">
        <% form.label :answer, { class: "form-label"} %>
        <%= hidden_field_tag 'card_id', @card.id %>
        <%= form.number_field :answer, { class: "form-control", placeholder: "Answer" } %>
        <%= form.submit "Submit Answer", class: "btn btn-primary" %>
      </div>
    </div>
  <% end %>
</h2></center>
